{
  "manifest_version": 3,
  "name": "Midjourney Local Bridge Extension",
  "version": "1.0.0",
  "description": "Connects your authenticated Midjourney browser session to the web app via local bridge",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://www.midjourney.com/*",
    "https://discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.midjourney.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
