{
  "manifest_version": 3,
  "name": "Prompt Bridge Extension",
  "version": "1.0.0",
  "description": "Connects your authenticated AI image generation sessions (Midjourney, Ideogram, etc.) to the web app via local bridge",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.midjourney.com/*",
    "https://ideogram.ai/*",
    "https://firefly.adobe.com/*",
    "https://discord.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.midjourney.com/*",
        "https://ideogram.ai/*",
        "https://firefly.adobe.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
