:root {
    --primary-color: #6366f1;
    --secondary-color: #8b5cf6;
    --success-color: #10b981;
    --error-color: #ef4444;
    --bg-color: #0f172a;
    --card-bg: #1e293b;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --border-color: #334155;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: var(--bg-color);
    color: var(--text-primary);
    line-height: 1.6;
}

.screen {
    min-height: 100vh;
}

.hidden {
    display: none !important;
}

/* Auth Screen */
.auth-container {
    max-width: 400px;
    margin: 100px auto;
    padding: 40px;
    background: var(--card-bg);
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
}

.auth-container h1 {
    text-align: center;
    margin-bottom: 30px;
    font-size: 2rem;
}

.auth-tabs {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
}

.tab-btn {
    flex: 1;
    padding: 10px;
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-secondary);
    cursor: pointer;
    border-radius: 6px;
    transition: all 0.3s;
}

.tab-btn.active {
    background: var(--primary-color);
    color: white;
    border-color: var(--primary-color);
}

.auth-form {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.auth-form input {
    padding: 12px;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 14px;
}

.auth-form button {
    padding: 12px;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
}

.auth-form button:hover {
    background: var(--secondary-color);
}

.error-message {
    color: var(--error-color);
    font-size: 14px;
    min-height: 20px;
}

/* Main Screen */
header {
    background: var(--card-bg);
    padding: 20px 40px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-color);
}

header h1 {
    font-size: 1.5rem;
}

.user-info {
    display: flex;
    align-items: center;
    gap: 15px;
}

#logout-btn {
    padding: 8px 16px;
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-primary);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s;
}

#logout-btn:hover {
    background: var(--error-color);
    border-color: var(--error-color);
}

main {
    max-width: 1200px;
    margin: 40px auto;
    padding: 0 20px;
}

.generator-container {
    background: var(--card-bg);
    padding: 30px;
    border-radius: 12px;
    margin-bottom: 30px;
}

.generator-container h2 {
    margin-bottom: 20px;
}

#prompt-input {
    width: 100%;
    padding: 15px;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 14px;
    font-family: inherit;
    resize: vertical;
    margin-bottom: 15px;
}

.controls {
    display: flex;
    gap: 15px;
    align-items: center;
}

#model-select {
    padding: 12px;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 14px;
    flex: 1;
    max-width: 300px;
}

#generate-btn {
    padding: 12px 24px;
    background: var(--primary-color);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s;
}

#generate-btn:hover {
    background: var(--secondary-color);
}

#generate-btn:disabled {
    background: var(--border-color);
    cursor: not-allowed;
}

#loading {
    text-align: center;
    padding: 40px;
}

.spinner {
    width: 40px;
    height: 40px;
    border: 4px solid var(--border-color);
    border-top-color: var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 15px;
}

@keyframes spin {
    to { transform: rotate(360deg); }
}

#prompts-container {
    background: var(--card-bg);
    padding: 30px;
    border-radius: 12px;
    margin-bottom: 30px;
}

.prompts-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
}

#copy-all-btn {
    padding: 8px 16px;
    background: var(--success-color);
    color: white;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: opacity 0.3s;
}

#copy-all-btn:hover {
    opacity: 0.8;
}

.prompt-item {
    background: var(--bg-color);
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 15px;
    border: 1px solid var(--border-color);
}

.prompt-item textarea {
    width: 100%;
    padding: 10px;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    color: var(--text-primary);
    font-size: 14px;
    font-family: 'Monaco', 'Courier New', monospace;
    resize: vertical;
    min-height: 60px;
}

.prompt-actions {
    display: flex;
    gap: 10px;
    margin-top: 10px;
}

.prompt-actions button {
    padding: 6px 12px;
    background: var(--border-color);
    color: var(--text-primary);
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 12px;
    transition: background 0.3s;
}

.prompt-actions button:hover {
    background: var(--primary-color);
}

.session-info {
    margin-top: 20px;
    padding: 15px;
    background: var(--bg-color);
    border-radius: 6px;
    display: flex;
    align-items: center;
    gap: 15px;
}

.session-info code {
    background: var(--card-bg);
    padding: 4px 8px;
    border-radius: 4px;
    font-family: 'Monaco', 'Courier New', monospace;
    font-size: 12px;
}

#copy-session-link {
    padding: 6px 12px;
    background: var(--secondary-color);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 12px;
}

#history-container {
    background: var(--card-bg);
    padding: 30px;
    border-radius: 12px;
}

#history-container h2 {
    margin-bottom: 20px;
}

.history-item {
    background: var(--bg-color);
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 10px;
    border: 1px solid var(--border-color);
    cursor: pointer;
    transition: border-color 0.3s;
}

.history-item:hover {
    border-color: var(--primary-color);
}

.history-item-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 5px;
}

.history-item-date {
    color: var(--text-secondary);
    font-size: 12px;
}

.history-item-preview {
    color: var(--text-secondary);
    font-size: 14px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
